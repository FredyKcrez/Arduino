	<script type="text/javascript">
		var num = 30 //valor inicial
		function cuentaAtras() {
			if(num > 0){
				if(num<10){
					num = "0" + num
				}
				document.getElementById('cuenta').firstChild.nodeValue = num
				num--
				setTimeout('cuentaAtras()',1000)
			}
		}
</script>
